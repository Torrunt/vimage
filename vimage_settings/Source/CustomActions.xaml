<UserControl x:Class="vimage_settings.CustomActions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:vimage_settings"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="35" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Name="CustomActionItems" />
        </ScrollViewer>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="36" />
                <ColumnDefinition Width="36" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" HorizontalAlignment="Left" Width="24" Height="24" Margin="5" BorderBrush="#FFACACAC" Click="Add_Click">
                <Button.Content>
                    <Viewbox Width="12" Height="12" >
                        <Grid>
                            <Path Stroke="DimGray" StrokeThickness="2" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Data="M5 12h14" Stretch="Fill"/>
                            <Path Stroke="DimGray" StrokeThickness="2" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Data="M12 5v14" Stretch="Fill"/>
                        </Grid>
                    </Viewbox>
                </Button.Content>
            </Button>
            <Button Grid.Column="1" HorizontalAlignment="Left" Width="24" Height="24" Margin="5" BorderBrush="#FFACACAC" Click="CommandList_Click" ToolTip="commands list">
                <Button.Content>
                    <Canvas Width="16" Height="16">
                        <Path Stroke="CornflowerBlue" StrokeThickness="2" StrokeLineJoin="Round" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Height="16" Stretch="Fill" Width="16" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Path.Data>
                                <GeometryGroup>
                                    <EllipseGeometry Center="12,12" RadiusX="10" RadiusY="10"/>
                                    <LineGeometry StartPoint="12,16" EndPoint="12,12"/>
                                    <LineGeometry StartPoint="12,8" EndPoint="12.01,8"/>
                                </GeometryGroup>
                            </Path.Data>
                        </Path>
                    </Canvas>
                </Button.Content>
            </Button>
            <TextBlock Grid.Column="2" HorizontalAlignment="Right" Margin="0,0,5,0">
                %f = current file (with quotes)<LineBreak/>
                %d = current directory (without quotes)
            </TextBlock>
        </Grid>
    </Grid>
</UserControl>
