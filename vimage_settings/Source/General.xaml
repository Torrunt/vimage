<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:vimage_settings"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="vimage_settings.General"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="450" Margin="2">
    <UserControl.Resources>
        <Style TargetType="{x:Type Label}">
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style x:Key="ColourPickerBorder" TargetType="{x:Type Border}">
            <Setter Property="BorderBrush" Value="#FF707070"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#FF5593FF" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <CheckBox IsChecked="{Binding OpenAtMousePosition}" Content="Open images at mouse position" ToolTip="When an image is opened it will be centered at the current mouse position (commonly where the image file is).&#x0a;Otherwise it will be centered on the current monitor."/>
        <CheckBox IsChecked="{Binding SmoothingDefault}" Content="Smoothing"/>
        <CheckBox IsChecked="{Binding Mipmapping}" Content="Mipmapping (smoother images when zoomed out)"/>
        <CheckBox IsChecked="{Binding PositionLargeWideImagesInCorner}" Content="Position large/wide images in corner (ie: wallpapers/screenshots)" ToolTip="Images that are wider than or the same width as the current monitor will be placed in the top left corner."/>
        <CheckBox IsChecked="{Binding LoopImageNavigation}" Content="Loop image navigation" ToolTip="Whether or not looping will occur when reaching the last/first image in the directory when using the next/prev image buttons."/>
        <CheckBox IsChecked="{Binding PreloadNextImage}" Content="Image preloading" ToolTip="When using the next/prev image buttons, the image after the one just loaded will be loaded as well."/>
        <CheckBox IsChecked="{Binding ClearMemoryOnResetImage}" Content="Clear Memory on reset image" ToolTip="When the Reset Image action is used, all textures/animations will be cleared from memory (except ones used for current image)."/>
        <CheckBox IsChecked="{Binding ShowTitleBar}" Content="Show Title Bar" ToolTip="Shows the Windows Title Bar on images by default."/>
        
        <CheckBox IsChecked="{Binding BackgroundForImagesWithTransparencyDefault}" Content="Show background behind images with transparency" ToolTip="Images with partial transparency will have a background behind them." Margin="0,10"/>
        <DockPanel ToolTip="For transparent images (when transparency is turned off)." Height="15" Margin="0,0,0,10">
            <Border Style="{StaticResource ColourPickerBorder}" OverridesDefaultStyle="true" Width="14" Height="13" Margin="1,0,5,0" BorderThickness="1">
                <DockPanel Width="13" Height="12" ClipToBounds="true" >
                    <xctk:ColorPicker Width="17" Height="15" ShowTabHeaders="false" ColorMode="ColorCanvas" SelectedColor="{Binding BackgroundColour}" ShowDropDownButton="False" Padding="0" BorderThickness="0" Margin="-2,-4,0,0" />
                </DockPanel>
            </Border>
            <Label Content="Background colour" Padding="-4,0,0,0" Margin="0,-1,0,0"/>
        </DockPanel>
        <DockPanel ToolTip="The transparency of the image when you press the 'Transparency Toggle' button." Height="15" Margin="0,0,0,10">
            <Border Style="{StaticResource ColourPickerBorder}" OverridesDefaultStyle="true" Width="14" Height="13" Margin="1,0,5,0" BorderThickness="1">
                <DockPanel Width="13" Height="12" ClipToBounds="true" >
                    <xctk:ColorPicker Width="17" Height="15" ShowTabHeaders="false" ColorMode="ColorCanvas" SelectedColor="{Binding TransparencyToggleValue}" ShowDropDownButton="False" Padding="0" BorderThickness="0" Margin="-2,-4,0,0" />
                </DockPanel>
            </Border>
            <Label Content="Transparency toggle value" Padding="-4,0,0,0" Margin="0,-1,0,0"/>
        </DockPanel>
        <DockPanel Height="15" Margin="0,0,0,10">
            <Border Style="{StaticResource ColourPickerBorder}" OverridesDefaultStyle="true" Width="14" Height="13" Margin="1,0,5,0" BorderThickness="1">
                <DockPanel Width="13" Height="12" ClipToBounds="true" >
                    <xctk:ColorPicker Width="17" Height="15" ShowTabHeaders="false" ColorMode="ColorCanvas" SelectedColor="{Binding CropToolFillColour}" ShowDropDownButton="False" Padding="0" BorderThickness="0" Margin="-2,-4,0,0" />
                </DockPanel>
            </Border>
            <Label Content="Crop tool fill colour" Padding="-4,0,0,0" Margin="0,-1,0,0"/>
        </DockPanel>
        <DockPanel Height="15" >
            <Border Style="{StaticResource ColourPickerBorder}" OverridesDefaultStyle="true" Width="14" Height="13" Margin="1,0,5,0" BorderThickness="1">
                <DockPanel Width="13" Height="12" ClipToBounds="true" >
                    <xctk:ColorPicker Width="17" Height="15" ShowTabHeaders="false" ColorMode="ColorCanvas" SelectedColor="{Binding CropToolOutlineColour}" ShowDropDownButton="False" Padding="0" BorderThickness="0" Margin="-2,-4,0,0" />
                </DockPanel>
            </Border>
            <Label Content="Crop tool outline colour" Padding="-4,0,0,0" Margin="0,-1,0,0"/>
        </DockPanel>
        <DockPanel>
            <Label Content="Crop tool outline thickness" Margin="15,0,0,0"/>
            <xctk:IntegerUpDown Value="{Binding CropToolOutlineThickness}" Minimum="0" Margin="10,0" Width="50" HorizontalAlignment="Right" />
        </DockPanel>

        <DockPanel Margin="0,10,0,0" ToolTip="How the image will be sized when using the next/prev image buttons.">
            <Label Content="Next/Prev Image Sizing"/>
            <ComboBox SelectedIndex="{Binding ImageSizing, Converter={StaticResource EnumConverter}}" Margin="10,0" Width="100" HorizontalAlignment="Right" >
                <System:String>Fit Width</System:String>
                <System:String>Fit Height</System:String>
                <System:String>Fit Auto</System:String>
                <System:String>Keep Zoom</System:String>
                <System:String>Full Size</System:String>
            </ComboBox>
        </DockPanel>
        <DockPanel ToolTip="Applied when opening or resetting an image.">
            <Label Content="Limit images to monitor"/>
            <ComboBox SelectedIndex="{Binding LimitImagesToMonitor}" Margin="10,0" Width="100" HorizontalAlignment="Right" >
                <System:String>NONE</System:String>
                <System:String>HEIGHT</System:String>
                <System:String>WIDTH</System:String>
                <System:String>AUTO</System:String>
            </ComboBox>
        </DockPanel>
        <DockPanel ToolTip="Images smaller than this (in width or height) will automatically be scaled up to this size.">
            <Label Content="Min image size"/>
            <xctk:IntegerUpDown Value="{Binding MinImageSize}" FormatString="0px" Minimum="0" Margin="10,0" Width="100" HorizontalAlignment="Right" />
        </DockPanel>
        <DockPanel ToolTip="Smoothing will be turned off by default for images smaller than this.">
            <Label Content="Don't smooth images smaller than"/>
            <xctk:IntegerUpDown Value="{Binding SmoothingMinImageSize}" FormatString="0px" Minimum="0" Margin="10,0" Width="100" HorizontalAlignment="Right" />
        </DockPanel>
        <DockPanel ToolTip="Speed at which the image resizes when zooming with Mouse Wheel.&#x0a;Also affects 'Transparency Hold'.">
            <Label Content="Zoom Speed"/>
            <xctk:IntegerUpDown Value="{Binding ZoomSpeed}" FormatString="0\%" Minimum="0" Margin="10,0" Width="100" HorizontalAlignment="Right" />
        </DockPanel>
        <DockPanel ToolTip="Zoom speed when holding down 'Zoom Faster' (SHIFT by default).">
            <Label Content="Zoom Speed (Fast)"/>
            <xctk:IntegerUpDown Value="{Binding ZoomSpeedFast}" FormatString="0\%" Minimum="0" Margin="10,0" Width="100" HorizontalAlignment="Right" />
        </DockPanel>
        <DockPanel ToolTip="Speed at which the image moves when using the movement key binds.">
            <Label Content="Move Speed"/>
            <xctk:IntegerUpDown Value="{Binding MoveSpeed}" FormatString="0px" Minimum="0" Margin="10,0" Width="100" HorizontalAlignment="Right" />
        </DockPanel>
        <DockPanel ToolTip="Move speed when holding down 'Zoom Faster' (SHIFT by default).">
            <Label Content="Move Speed (Fast)"/>
            <xctk:IntegerUpDown Value="{Binding MoveSpeedFast}" FormatString="0px" Minimum="0" Margin="10,0" Width="100" HorizontalAlignment="Right" />
        </DockPanel>
        <DockPanel ToolTip="The max amount of textures that vimage will keep in it's memory.">
            <Label Content="Max Textures in Memory"/>
            <xctk:IntegerUpDown Value="{Binding MaxTextures}" Minimum="3" Margin="10,0" Width="100" HorizontalAlignment="Right" />
        </DockPanel>
        <DockPanel ToolTip="The max amount of animated gifs that vimage will keep in it's memory.">
            <Label Content="Max Animations in Memory"/>
            <xctk:IntegerUpDown Value="{Binding MaxAnimations}" Minimum="2" Margin="10,0" Width="100" HorizontalAlignment="Right" />
        </DockPanel>
        <DockPanel ToolTip="Default sorting when stepping through images in a folder.&#x0a;(FOLDER = Sort the same way Windows is sorting the folder)">
            <Label Content="Default Sorting" />
            <DockPanel HorizontalAlignment="Right">
                <ComboBox SelectedIndex="{Binding DefaultSortBy, Converter={StaticResource EnumConverter}}" Width="100">
                    <System:String>FOLDER</System:String>
                    <System:String>Name</System:String>
                    <System:String>Date</System:String>
                    <System:String>Date Modified</System:String>
                    <System:String>Date Created</System:String>
                    <System:String>Size</System:String>
                </ComboBox>
                <ComboBox SelectedIndex="{Binding DefaultSortDir, Converter={StaticResource EnumConverter}}" Margin="0,0,10,0" Width="100">
                    <System:String>FOLDER</System:String>
                    <System:String>Ascending</System:String>
                    <System:String>Descending</System:String>
                </ComboBox>
            </DockPanel>
        </DockPanel>
    </StackPanel>
</UserControl>
